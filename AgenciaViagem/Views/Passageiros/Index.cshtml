@model IEnumerable<AgenciaViagem.Models.Passageiro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destino.LocalDestino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodigoCliente" class=" btn btn-primary ">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CodigoCliente" class="btn btn-success">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.CodigoCliente"  class="btn btn-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
